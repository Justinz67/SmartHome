<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.deplinux.smarthome">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".Activity.SplashActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:noHistory="true"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.LoginActivity"/>
        <activity android:name=".Activity.MainActivity" />
        <activity android:name=".Activity.DeviceActivity"/>
        <activity android:name=".Activity.GatewayConfig"/>
        <activity android:name=".Activity.SceneAdd"/>
        <activity android:name=".Activity.SwitchActivity"/>
        <activity android:name=".Activity.PlugActivity"/>
        <activity android:name=".Activity.SensorActivity"/>
        <activity android:name=".Activity.AlertActivity"/>
        <activity android:name=".Activity.InfraredActivity"/>
        <activity android:name=".Activity.DoorActivity"/>
        <activity android:name=".Activity.CurtainActivity"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
</manifest>